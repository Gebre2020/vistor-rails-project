  <% if @location.errors.any? %>
    <% @location.errors.full_messages.each do |mess|%>
      <li style="color: red"><%= mess %></li>
    <% end %>
  <% end %>
  

<%= form_for(@location) do |f| %>
  
  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :country %>
  <%= f.text_field :country %>
  <br>
  <br>

  <h3>Create a Travel Place:</h3>
  <%= f.fields_for :travels do |travel_fields| %>
  
    <%= travel_fields.label :name %>
    <%= travel_fields.text_field :name %>

    <%= travel_fields.label :address %>
    <%= travel_fields.text_field :address %>
  <% end %>
    
  <%= f.submit %>
<% end %> 

