<%= form_with(model: ([ @location, @travel ]), local: true) do |form| %>

<% if @travel.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@travel.errors.count, "error") %> prohibited
        this travel from being saved:
      </h2>
      <ul>
        <% @travel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </p>
    <% if @location %> 
        <%= form.hidden_field :location_id, value: @location.id %>
    <% else %> 
      <h3> Create a Location:</h3>
      <%= form.fields_for :location do |loc| %>
      <p>
        <%= loc.label :city %><br>
        <%= loc.text_field :city %>
      </p>
      <p>
        <%= loc.label :country %><br>
        <%= loc.text_field :country %>
      </p>
      <% end %>
    <% end %>
  <p>
    <%= form.submit %>
  </p>
<% end %>
