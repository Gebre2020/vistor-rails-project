<h1>Login Here:</h1>

<%= flash[:message] if flash[:message] %>

<%= form_for :user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Log In" %>
  
<% end %>

<h3>Or Login with Google:</h3>

<%= button_to 'Google', '/auth/google_oauth2' %>